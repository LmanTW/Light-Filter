{
  "extends": "@tsconfig/node20/tsconfig.json",

  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],

  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "composite": true,
    "noEmit": true,

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "types": ["node"]
  }
}
